<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#888"
    tools:context=".activity.PopUpActivity">

    <LinearLayout
        android:id="@+id/linearHoriView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Details"
            android:textSize="14sp"
            android:textColor="#fff"
            android:layout_marginStart="15dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvCancelActivity"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="X"
            android:textColor="#fff"
            android:textStyle="bold"
            android:gravity="end"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:id="@+id/dividerView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/linearHoriView"
        android:background="#AAAAAA"/>

    <TextView
        android:id="@+id/tvValue1"
        android:layout_below="@+id/dividerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Value: 85"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:textColor="#fff"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/tvMoreChart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="More"
        android:gravity="end"
        android:textSize="13sp"
        android:textColor="#fff"
        android:layout_margin="15dp" />

