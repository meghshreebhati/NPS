            android:id="@+id/tbTitle3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question Wise Response"/>
        <com.google.android.material.tabs.TabItem
            android:id="@+id/tbTitle4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alert"/>
        <com.google.android.material.tabs.TabItem
            android:id="@+id/tbTitle5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Response"/>
        <com.google.android.material.tabs.TabItem
            android:id="@+id/tbTitle6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title6"/>

